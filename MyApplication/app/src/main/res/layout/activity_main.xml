<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EngVoca">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="English Vocabulary"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:background="#0099FF"
        android:gravity="left|center" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="342dp"
        android:layout_height="200dp"
        android:src="@drawable/en"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <Button
        android:id="@+id/button_learn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="LEARN"/>
    <Button
        android:id="@+id/button_practice"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="PRACTICE"/>
    <Button
        android:id="@+id/button_test"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="TEST"/>
    <Button
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="NEXT"></Button>

        <ImageView android:id="@+id/image2"
            android:layout_width="70dp"
            android:layout_height="70dip"
            android:layout_marginTop="68dp"
            android:gravity="center_horizontal"
            android:src="@drawable/internet"
            android:layout_toLeftOf="@id/image3"
            android:layout_alignBottom="@id/image3"
            ></ImageView>
        <ImageView android:id="@+id/image3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/star"
            android:layout_toLeftOf="@id/image4"
            android:layout_alignBottom="@id/image4"

            />
        <ImageView android:id="@+id/image4"
            android:layout_width="70dp"
            android:layout_height="70dip"
            android:layout_marginTop="68dp"
            android:src="@drawable/setting"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

</RelativeLayout>