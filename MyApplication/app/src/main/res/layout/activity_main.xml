<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EngVoca">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="English Vocabulary"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:background="#0099FF"
        android:gravity="left|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="342dp"
        android:layout_height="200dp"
        android:src="@drawable/en"
        android:text="English Vocabulary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <Button
        android:id="@+id/button_learn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="LEARN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"/>
    <Button
        android:id="@+id/button_practice"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dp"
        android:text="PRACTICE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_learn"/>
    <Button
        android:id="@+id/button_test"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="TEST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_practice"/>
    <ImageView android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="70dip"
        android:layout_marginTop="68dp"
        android:src="@drawable/internet"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_test"
        android:layout_marginLeft="152dp" android:layout_marginStart="152dp"/>
    <ImageView android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="70dip"
        android:layout_marginTop="68dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_test"
        app:layout_constraintRight_toRightOf="@+id/image2"
        />
    <ImageView android:id="@+id/image4"
        android:layout_width="0dp"
        android:layout_height="70dip"
        android:layout_marginTop="68dp"
        android:src="@drawable/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_test"
        app:layout_constraintRight_toRightOf="@+id/image2"
        android:layout_marginEnd="76dp" android:layout_marginRight="76dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>